<% include partials/header %>
    <link rel="stylesheet" href="/style.css">
<% include partials/headerBottom %>

    <h1>Test Users Page</h1>
    <div class="container jumbotron">
        <form action="/testusers" method="POST" class="user">
            <div>
                <label for="nome">Nome</label>
                    <input type="text" placeholder="qualquer nome" id="nome" name="user[nome]">
            </div>
            <div>
                <label for="nome">@email</label>
                    <input type="email" placeholder="email" id="nome" name="user[email]">
            </div>
            <div>
                <label for="title">Título</label>
                <input type="text" placeholder="título">
            </div>
            <div>
                <label for='obs'>Observações</label>
                <textarea rows="10" cols="85" placeholder="email" id="nome" name="user[obs]"></textarea>
            </div>
            <div>
                <button class="btn btn-primary" type="submit">Enviar</button>
            </div>
        </form>
    </div>
    <div>
        <h3>Usuários Cadastrados</h3>
    </div>
    <div class="row">
        <% outUser.forEach(function(user){ %>
        <div class="ans_list col-md-3 col-sm-6">
            <div class="thumbnail">
                <li>Nome: <%=outUser.nome%></li>
                <li>Observação: <%=outUser.obs%></li>
            </div>
        </div>
    <% }); %>
    </div>
<% include partials/footer %>