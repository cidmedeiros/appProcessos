<div class="modal fade bd-modalCompromisso-modal-lg" tabindex="-1" role="dialog" aria-labelledby="modalCompromisso" aria-hidden="true" id="modalCompromisso">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Análise do Compromisso</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div>
                <h5 class="ml-3"> <%= bolCons.nome %> CPF: <%= bolCons.cpf %> </h5>
            </div>
            <div class="modal-body border border-rounded border-info mx-1 my-1">
                <form action='/editarcompromisso/<%=bolCons.cpf%>?_method=PUT' method="POST">
                    <% var ufList = [] %>
                    <% municipios.forEach(mun => { %>
                        <% if(!ufList.includes(mun.uf)){ %>
                            <% ufList.push(mun.uf) %>
                        <% } %>                        
                    <% }); %>
                    <h5><strong>Certificado de Término do Curso</strong></h5>

                    <div class="card mt-2 mb-3 my-1 py-.25 pl-.5">
                        <div class="card-body">
                            <div class="form-group">
                                <h5 style="color: black;">Instituição de Ensino Emissora</h5>

                                <div class="form-row justify-content-center">
                                    <div class="col">
                                        <label for="bolsista[ufCert]">Unidade Federativa da Ies</label>
                                        <select class="form-control custom-select inlineFormCustomSelect" name='bolsista[ufCert]' id='bolsista[ufCert]'>
                                        <% var indexCert = (bolCons.certConclusao.length)-1; %>
                                        <% var certificado = bolCons.certConclusao[indexCert]; %>
                                        <% if(indexCert <= 0){ %>
                                            <option>Selecione</option>
                                            <% ufList.forEach(uf => { %>
                                                <option value="<%= uf %>"><%= uf %></option>
                                            <% }); %>
                                        <% } else{ %>
                                            <% ufList.forEach(uf => { %>
                                                <% if(uf == certificado.ies.uf){ %>
                                                    <option value="<%= uf %>" selected><%= certificado.ies.uf %></option>
                                                <% } else { %>
                                                    <option value="<%= uf %>"><%= uf %></option>
                                                <% } %>
                                            <% }); %>
                                        <% } %>
                                        </select>
                                    </div>

                                    <div class="col-1">
                                        <select style="display: none;" class="form-control custom-select inlineFormCustomSelect" id='noDisplayIes'>
                                            <% entidades.forEach(ies => { %>
                                                <option value= <%= ies.uf %> > <%= ies.sigla %> </option>
                                            <% }); %>
                                        </select>
                                    </div>

                                    <div class="col">
                                        <label for="bolsista[iesCert]">Instituição de Ensino</label>
                                        <select class="form-control custom-select inlineFormCustomSelect" name='bolsista[iesCert]' id='bolsista[iesCert]'>
                                        <% if(indexCert <= 0){ %>
                                            <option>Selecione</option>
                                        <% } else { %>
                                            <option> <%= certificado.ies.sigla %> </option>
                                        <% } %>
                                        </select>
                                    </div>

                                </div>
                                
                            </div>
                        </div>
                    </div>

                    <div class="form-row justify-content-center">

                        <div class="col card mb-2 ml-1 mr-1 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title" style="color: black;">Situação do Curso</h5>
                                <div class="form-group">
                                    <select class="form-control custom-select inlineFormCustomSelect" name='bolsista[status]' id='bolsista[status]'>
                                    <% var statusList = ['Selecione','Concluído','Desligado','Abandonou o Curso','Cursando (Reingresso)']; %>
                                    <% var indexStatus = (bolCons.statusCurso.length)-1; %>
                                    <% var statusCurso = bolCons.statusCurso[indexStatus]; %>
                                    <% if(indexStatus <= 0){ %>
                                        <% statusList.forEach((stat) => { %>
                                            <option><%= stat %></option>
                                        <% }); %>
                                    <% } else { %>
                                        <% statusList.shift() %>;
                                        <% statusList.forEach((statList) => { %>
                                            <% if(statList === statusCurso.status){ %>
                                                <option selected><%= statList %></option>
                                            <% } else { %>
                                                <option><%= statList %></option>
                                            <% } %>
                                        <% }); %>
                                    <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col card mb-2 ml-1 mr-1 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title" style="color: black;">Data de Conclusão do Curso</h5>
                                <div class="form-group">
                                    <input class="mx-auto" type="month" id="start" name="bolsista[dataConcl]" min="2011-03" value=''>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="form-row justify-content-center">

                        <div class="col-4 card mb-2 ml-1 mr-1 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title mb-.25" style="color: black; text-align: center;">Regularidade do Certificado</h5>
                                <div class="form-group mb-0">
                                    <select class="form-control custom-select inlineFormCustomSelect mx-auto" name="bolsista[regCert]" id="bolsista[regCert]">
                                        <<% if(indexCert <= 0){ %>
                                            <option>Selecione</option>
                                            <option>Regular</option>
                                            <option>Irregular</option>
                                        <% } else if(certificado.regular === 'Regular') { %>
                                            <option selected>Regular</option>
                                            <option>Irregular</option>
                                        <% } else { %>
                                            <option selected>Irregular</option>
                                            <option>Regular</option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col card mb-2 ml-1 mr-1 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title" style="color: black;">Observação do Certificado</h5>
                                <div class="form-group">
                                    <select class="form-control custom-select inlineFormCustomSelect" name='bolsista[obsvCert]' id='bolsista[obsvCert]'>
                                    <%var obsvCertList = ['Selecione','Ausente','Cópia Ilegível','Sem Assinatura','Sem Observações'];%>
                                    <% if(indexCert <= 0){ %>
                                        <% obsvCertList.forEach((obs) => { %>
                                            <option><%= obs %></option>
                                        <% }); %>
                                    <% } else { %>
                                        <% obsvCertList.shift() %>;
                                        <% obsvCertList.forEach((obs) => { %>
                                            <% if(obs === certificado.obsv){ %>
                                                <option selected><%= obs %></option>
                                            <% } else { %>
                                                <option><%= obs %></option>
                                            <% } %>
                                        <% }); %>
                                    <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>

                    <h5><strong>Declaração de Permanência</strong></h5>
                    <div class="card mt-2 mb-3 my-1 py-.25 pl-.5">
                        <div class="card-body">
                            <div class="form-group">
                                <h5 style="color: black;">Município da Escola Emissora</h5>

                                <div class="form-row">

                                    <div class="col">
                                        <label for="bolsista[ufDecl]">Unidade Federativa</label>
                                        <select class="form-control custom-select inlineFormCustomSelect" name='bolsista[ufDecl]' id='bolsista[ufDecl]'>
                                        <% var indexDecl = (bolCons.declaracao.length)-1; %>
                                        <% var declaracao = bolCons.declaracao[indexDecl]; %>
                                        <% if(indexDecl <= 0){ %>
                                            <option>Selecione</option>
                                            <% ufList.forEach(uf => { %>
                                                <option value="<%= uf %>"><%= uf %></option>
                                            <% }); %>
                                        <% } else{ %>
                                            <% ufList.forEach(uf => { %>
                                                <% if(uf == declaracao.municipioEscola.uf){ %>
                                                    <option value="<%= uf %>" selected><%= declaracao.municipioEscola.uf %></option>
                                                <% } else { %>
                                                    <option value="<%= uf %>"><%= uf %></option>
                                                <% } %>
                                            <% }); %>
                                        <% } %>
                                        </select>
                                    </div>

                                    <div class="col-1">
                                        <select style="display: none;" class="form-control custom-select inlineFormCustomSelect" id='noDisplayMun'>
                                            <% municipios.forEach(mun => { %>
                                                <option value= <%= mun.uf %> > <%= mun.nome %> </option>
                                            <% }); %>
                                        </select>
                                    </div>

                                    <div class="col">
                                        <label for="bolsista[munDecl]">Município</label>
                                        <select class="form-control custom-select inlineFormCustomSelect" name='bolsista[munDecl]' id='bolsista[munDecl]'>
                                        <% if(indexDecl <= 0){ %>
                                            <option>Selecione</option>
                                        <% } else { %>
                                            <option> <%= declaracao.municipioEscola.nome %> </option>
                                        <% } %>
                                        </select>
                                    </div>

                                </div>
                                
                            </div>
                        </div>
                    </div>

                    <div class="form-row">

                        <div class="col-4 card mb-2 ml-1 mr-1 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title mb-.25" style="color: black;">Permanência (meses)</h5>
                                <div class="form-group mb-0">
                                    <select class="form-control custom-select inlineFormCustomSelect mx-auto" name="bolsista[perm]" id="bolsista[perm]">
                                        <% if(indexDecl <= 0){ %>
                                            <option>Selecione</option>
                                            <% for(var mes = 0; mes <= 95; mes++){ %>
                                                <option><%=mes%></option>
                                            <% } %>
                                            <option>96+</option>
                                        <% } else { %>
                                            <option selected><%=declaracao.permanencia%></option>
                                            <% for(var mes = 0; mes <= 95; mes++){ %>
                                                <option><%=mes%></option>
                                            <% } %>
                                            <option>96+</option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col card mb-2 ml-1 mr-1 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title mb-.25" style="color: black;">Regularidade da Declaração</h5>
                                <div class="form-group mb-0">
                                    <select class="form-control custom-select inlineFormCustomSelect mx-auto" name="bolsista[regDecl]" id="bolsista[regDecl]">
                                        <<% if(indexDecl <= 0){ %>
                                            <option>Selecione</option>
                                            <option>Regular</option>
                                            <option>Irregular</option>
                                        <% } else if(indexDecl.regular === 'Regular') { %>
                                            <option selected>Regular</option>
                                            <option>Irregular</option>
                                        <% } else { %>
                                            <option selected>Irregular</option>
                                            <option>Regular</option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-row justify-content-center">

                        <div class="col-12 card mb-4 mx-2 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title" style="color: black;">Observação da Declaração</h5>
                                <div class="form-group">
                                    <select class="form-control custom-select inlineFormCustomSelect" name='bolsista[obsvDecl]' id='bolsista[obsvDecl]'>
                                    <%var obsvDeclList = ['Selecione','Ausente','Cópia Ilegível','Sem Assinatura','Sem Observações'];%>
                                    <% if(indexDecl <= 0){ %>
                                        <% obsvDeclList.forEach((obs) => { %>
                                            <option><%= obs %></option>
                                        <% }); %>
                                    <% } else { %>
                                        <% obsvDeclList.shift() %>;
                                        <% obsvDeclList.forEach((obs) => { %>
                                            <% if(obs === declaracao.obsv){ %>
                                                <option selected><%= obs %></option>
                                            <% } else { %>
                                                <option><%= obs %></option>
                                            <% } %>
                                        <% }); %>
                                    <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>

                    </div>

                    <h5><strong>Resultado da Análise</strong></h5>
                    <div class="form-row">

                        <div class=" col-4 card mb-2 ml-1 mr-1 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title mb-.25" style="color: black;">Resultado da Análise</h5>
                                <div class="form-group mb-0">
                                    <select class="form-control custom-select inlineFormCustomSelect mx-auto" name="bolsista[resAna]" id="bolsista[resAna]">
                                        <<% if(indexDecl <= 0){ %>
                                            <option>Selecione</option>
                                            <option>Regular</option>
                                            <option>Irregular</option>
                                        <% } else if(indexDecl.regular === 'Regular') { %>
                                            <option selected>Regular</option>
                                            <option>Irregular</option>
                                        <% } else { %>
                                            <option selected>Irregular</option>
                                            <option>Regular</option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class=" col card mb-2 ml-1 mr-1 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title mb-.25" style="color: black;">Observação Adicional</h5>
                                <div class="form-group">
                                    <select class="form-control custom-select inlineFormCustomSelect" name='bolsista[obsvAna]' id='bolsista[obsvAna]'>
                                    <%var obsvDeclList = ['Selecione','Ausente','Cópia Ilegível','Sem Assinatura','Sem Observações'];%>
                                    <% if(indexDecl <= 0){ %>
                                        <% obsvDeclList.forEach((obs) => { %>
                                            <option><%= obs %></option>
                                        <% }); %>
                                    <% } else { %>
                                        <% obsvDeclList.shift() %>;
                                        <% obsvDeclList.forEach((obs) => { %>
                                            <% if(obs === declaracao.obsv){ %>
                                                <option selected><%= obs %></option>
                                            <% } else { %>
                                                <option><%= obs %></option>
                                            <% } %>
                                        <% }); %>
                                    <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary">Salvar</button>
                </form>
                
            </div>
        </div>
    </div>
</div>