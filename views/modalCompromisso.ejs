<div class="modal fade bd-modalCompromisso-modal-lg" tabindex="-1" role="dialog" aria-labelledby="modalCompromisso" aria-hidden="true" id="modalCompromisso">
    <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Análise do Compromisso</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div>
                <h5 class="ml-3"> <%= bolCons.nome %> CPF: <%= bolCons.cpf %> </h5>
            </div>
            <div class="modal-body border border-rounded border-info mx-1 my-1">
                <form action='/editarcompromisso/<%=bolCons.cpf%>?_method=PUT' method="POST">

                    <div class="form-row justify-content-center">

                        <div class="col-5 card my-1 mr-.5 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title"><strong>Situação do Curso</strong></h5>
                                <div class="form-group">
                                    <select class="form-control custom-select inlineFormCustomSelect" name='bolsista[status]' id='bolsista[status]'>
                                    <%var statusList = ['Selecione','Concluído','Desligado','Abandonou o Curso','Cursando (Reingresso)'];%>
                                    <% var indexStatus = (bolCons.statusCurso.length)-1; %>
                                    <% if(indexStatus <= 0){ %>
                                        <% statusList.forEach((stat) => { %>
                                            <option><%= stat %></option>
                                        <% }); %>
                                    <% } else { %>
                                        <% var statusCurso = bolCons.statusCurso[indexStatus]; %>
                                        <% statusList.shift() %>;
                                        <% statusList.forEach((statList) => { %>
                                            <% if(statList === statusCurso.status){ %>
                                                <option selected><%= statList %></option>
                                            <% } else { %>
                                                <option><%= statList %></option>
                                            <% } %>
                                        <% }); %>
                                    <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-1"></div>

                        <div class="col-6 card mt-2 mb-3 my-1 ml-.5 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title"><strong>Data de Conclusão do Curso</strong></h5>
                                <div class="form-group">
                                    <input class="mx-auto" type="month" id="start" name="bolsista[dataConcl]" min="2011-03" value=''>
                                </div>
                            </div>
                        </div>

                    </div>

                    <div class="card mt-2 mb-3 my-1 py-.25 pl-.5">
                        <div class="card-body">
                            <h5 class="card-title"><strong>Declaração de Permanência</strong></h5>
                            <div class="form-group">
                                <h4>Município da Escola Emissora</h4>
                                <div class="form-row">

                                    <div class="col">
                                        <label for="bolsista[ufCert]">Unidade Federativa</label>
                                        <select class="form-control" name='bolsista[ufCert]' id='bolsista[ufCert]'>
                                        <% var indexDecl = (bolCons.declaracao.length)-1; %>
                                        <% var declaracao = bolCons.declaracao[indexDecl]; %>
                                        <% if(indexDecl <= 0){ %>
                                            <option>Selecione</option>
                                            <% municipios.forEach(mun => { %>
                                                <option value="<%= mun.agrpUf %>"><%= mun.agrpUf %></option>
                                            <% }); %>
                                        <% } else{ %>
                                            <% municipios.forEach(mun => { %>
                                                <% if(mun.agrpUf == declaracao.escola.municipio.uf){ %>
                                                    <option value="<%= mun.agrpUf %>" selected><%= mun.agrpUf %></option>
                                                <% } else { %>
                                                    <option value="<%= mun.agrpUf %>"><%= mun.agrpUf %></option>
                                                <% } %>
                                            <% }); %>
                                        <% } %>
                                        </select>
                                    </div>

                                    <div class="col-1">
                                        <select style="display: none;" class="form-control" id='noDisplay'>
                                            <% municipios.forEach(mun => { %>
                                                <% mun.municipios.forEach(munInt => { %>
                                                    <option value= <%= munInt.uf %> > <%= munInt.nome %> </option>
                                                <% }); %>
                                            <% }); %>
                                        </select>
                                    </div>

                                    <div class="col">
                                        <label for="bolsista[ufCert]">Município</label>
                                        <select class="form-control" name='bolsista[munCert]' id='bolsista[munCert]'>
                                        <% if(indexDecl <= 0){ %>
                                            <option>Selecione</option>
                                        <% } else { %>
                                            <option> <%= declaracao.escola.municipio.nome %> </option>
                                        <% } %>
                                        </select>
                                    </div>

                                </div>
                                
                            </div>
                        </div>
                    </div>

                    <div class="form-row">

                        <div class=" col-4 card mt-2 mb-3 my-1 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title mb-.25"><strong>Permanência (meses)</strong></h5>
                                <div class="form-group mb-0">
                                    <select class="form-control mx-auto" name="bolsista[perm]" id="bolsista[perm]">
                                        <% if(indexDecl <= 0){ %>
                                            <option>Selecione</option>
                                            <% for(var mes = 0; mes <= 95; mes++){ %>
                                                <option><%=mes%></option>
                                            <% } %>
                                            <option>96+</option>
                                        <% } else { %>
                                            <option> <%= declaracao.permanencia %> </option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-1"></div>

                        <div class=" col card mt-2 mb-3 my-1 py-.25 pl-.5">
                            <div class="card-body">
                                <h5 class="card-title mb-.25"><strong>Regularidade do Compromisso</strong></h5>
                                <div class="form-group mb-0">
                                    <select class="form-control mx-auto" name="bolsista[perm]" id="bolsista[perm]">
                                        <<% if(indexDecl <= 0){ %>
                                            <option>Selecione</option>
                                            <option>Regular</option>
                                            <option>Irregular</option>
                                        <% } else if(indexDecl.regular === 'Regular') { %>
                                            <option selected>Regular</option>
                                            <option>Irregular</option>
                                        <% } else { %>
                                            <option selected>Irregular</option>
                                            <option>Regular</option>
                                        <% } %>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
                
            </div>
        </div>
    </div>
</div>